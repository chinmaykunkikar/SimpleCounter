<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_color_cyan_400</item>
        <item name="colorPrimaryDark">@color/material_color_cyan_500</item>
        <item name="colorAccent">@color/material_color_pink_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="counterButtons" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorCounterButtons</item>
    </style>

</resources>
